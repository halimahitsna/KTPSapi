<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:id="@+id/navigation_drawer_layout"
    tools:context="id.sapi.ktp.aplikasiktpsapi.EditData">
    <FrameLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#f2f2f2"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Data Sapi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/foto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sapi2"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/linkubahfoto"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah Foto"
                    android:textColor="@color/alltext"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
                <EditText
                    android:id="@+id/idSapi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="id Sapi"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:enabled="false"
                    android:background="@drawable/rounded_view"
                    android:textColor="@color/alltext"/>
                <Spinner
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_view"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/jenis" />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:autofillHints="pilih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rounded_view"
                    android:id="@+id/indukan" />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rounded_view"
                    android:id="@+id/kandang" />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rounded_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/pakan" />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tgl_lahir" />
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/bobot_lhr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="bobot_lahir"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_view"
                    android:textColor="@color/alltext"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/bobot_hidup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bobot Hidup"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_view"
                    android:textColor="@color/alltext"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Harga"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_view"
                    android:textColor="@color/alltext"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/umur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="umur"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_view"
                    android:textColor="@color/alltext"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textColor="@color/alltext"
                    android:background="@drawable/rounded_button"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>