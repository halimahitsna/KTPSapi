<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_view"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idKandang"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:text="Medium Text"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kandang"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gbr"
            android:text="Medium Text"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bsuhu"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/kandang"
            android:text="Medium "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bkelembapan"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/kandang"
            android:layout_toRightOf="@+id/bsuhu"
            android:text="Medium"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bgas"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bkelembapan"
            android:layout_below="@id/kandang"
            android:text="Medium"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/edit"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_edit_black_24dp"/>
            <ImageView
                android:id="@+id/hapus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_delete_black_24dp"/>
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>