<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_alert"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_gravity="center">
    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info_black_24dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/icon"
            android:text="judul"
            android:textSize="16sp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/background" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vpn_key_black_24dp" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/gbr"
            android:id="@+id/subjudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/alltext"
            android:layout_centerVertical="true"
            android:text="mmmm"/>
        <TextView
            android:layout_toRightOf="@id/subjudul"
            android:paddingLeft="5dp"
            android:id="@+id/isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="inherit"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/alltext"
            android:text="mmmmmm" />
    </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Kembali"
            android:id="@+id/kmb"
            android:layout_gravity="center"
            android:background="@drawable/rounded_buttonalert"/>


</LinearLayout>