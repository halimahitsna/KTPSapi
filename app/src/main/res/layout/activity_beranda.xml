<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoututama"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    tools:context="id.sapi.ktp.aplikasiktpsapi.Beranda">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#fcfcfc"
        android:layout_alignParentTop="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BERANDA"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/statuslayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp">

        <az.plainpie.PieView
            android:id="@+id/suhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            plainpie:inner_pie_padding="15"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            plainpie:inner_text_visibility="true"
            plainpie:percentage_size="15" />

        <az.plainpie.PieView
            android:id="@+id/kelembapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            plainpie:inner_pie_padding="15"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            plainpie:inner_text_visibility="true"
            plainpie:percentage_size="15" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/statuslayouttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/statuslayout"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="SUHU"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="KELEMBAPAN"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/statuslayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/statuslayouttext">
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="@string/app_name"
            android:src="@drawable/add"
            android:background="#3b9ac9">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="JUMLAH SAPI"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#60b7e2">

        </TextView>
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:text="@string/app_name"
            android:src="@drawable/add"
            android:background="#3b9ac9">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/statuslayout2">

    </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />
</android.support.v4.widget.DrawerLayout>
